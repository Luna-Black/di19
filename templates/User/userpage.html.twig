{% extends "index.html.twig" %}
{% block title %}{{ parent() }} - Créer votre compte {% endblock %}
{% block body %}

    <div class="container-fluid mt-2">
        <h2>Page de {{ user.Pseudo }}</h2>
        <p><a href="/Api/Token/{{ user.Pseudo }}">Générer un token pour accéder à l'API</a></p>
    </div>
    <p>Token : {% if token %}{{ token }}{% else %}Token non généré{% endif %}</p>
    <a href="/Api/Article/{{ token }}">Vérifier l'API</a>

{% endblock %}